<div id="fullscreenloading" style="margin: 0px; padding: 0px; position: fixed; right: 0px;
    top: 0px; width: 100%; height: 100%; background-color:#000000; z-index: 300001;
        opacity: 0.5; display:none;">
    <img style="position: absolute;left: 50%;top: 50%;transform: translate(-50%, -50%); max-width: 10%;" src="~/icons/loading-blue.gif" />
    <h6 style="position: absolute;left: 50%;top: 60%;transform: translate(-50%, -50%); max-width: 50%; color:white;" id="LoadingMessage"></h6>

    <div id="ProgressMain" class="progress" style="position: absolute;left: 50%;top: 65%;transform: translate(-50%, -50%); width: 70%; display:none">
        <div id="ProgressSub" class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100" style="width:0%">
            0%
        </div>
    </div>

</div>